{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function () {
    $('#product_dt').DataTable({
        ajax: {
            dataType: 'json',
            contentType: "application/json; charset=utf-8",
            type: "GET",
            url:"/product/ajax-product-dt"
        },
        sAjaxSource: "",
        sAjaxDataProp: "",
        columns: [
        { data: 'id'  },
        { data: 'name' },
        { data: 'description'  },
        { data: 'price' },
        { data: 'active' },
        { data: 'quantity' },
        { data: 'Created At.date' },
        { data: 'Updated At.date' } ,
                  ],

    });
});
</script>
{% endblock %}

{% block body %}
   {{ include('includes/navbar.html.twig')}}
<main class="container">
    <h1>Product index</h1>

    <table id="product_dt" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Active</th>
                <th>Quantity</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>           
            </tr>
        </thead>
        
        <tfoot>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Active</th>
                <th>Quantity</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
            </tr>
        </tfoot>
    </table>

    <a class="btn btn-primary" href="{{ path('app_product_new') }}">Create new</a>
</main>
   {{ include('includes/footer.html.twig')}}
{% endblock %}
