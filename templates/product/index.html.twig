{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
   {{ include('includes/navbar.html.twig')}}
<main class="container">
    <h1>Product index</h1>

    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Active</th>
                <th>UpdatedAt</th>
                <th>CreatedAt</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.active ? 'Yes' : 'No' }}</td>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.quantity }}</td>
                <td>
                    <a class="btn btn-light" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                    <a class="btn btn-dark" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Active</th>
                <th>UpdatedAt</th>
                <th>CreatedAt</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </tfoot>
    </table>

    <a class="btn btn-primary" href="{{ path('app_product_new') }}">Create new</a>
</main>
   {{ include('includes/footer.html.twig')}}
{% endblock %}
